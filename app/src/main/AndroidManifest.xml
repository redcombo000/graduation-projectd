<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    package="com.example.workcare">

    <application
        android:name="com.example.workcare.common.BaseApplication"
        android:allowBackup="true"
        android:dataExtractionRules="@xml/data_extraction_rules"
        android:fullBackupContent="@xml/backup_rules"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.SampleApp"
        tools:targetApi="31">

        <activity
            android:name="com.example.workcare.view.login.ActivityLogin"
            android:exported="true"
            android:screenOrientation="portrait">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <activity
            android:name="com.example.workcare.view.signup.ActivitySignUp"
            android:screenOrientation="portrait" />

        <activity
            android:name="com.example.workcare.view.main.ActivityMain"
            android:screenOrientation="portrait" />

        <activity android:name="com.example.workcare.view.group.create.ActivityGroupCreate"
            android:screenOrientation="portrait"/>

        <activity android:name="com.example.workcare.view.group.info.ActivityGroupInfo"
            android:screenOrientation="portrait"/>

        <activity android:name="com.example.workcare.view.group.todo.ActivityGroupTodoList"
            android:screenOrientation="portrait"/>

        <activity android:name="com.example.workcare.view.group.todo.ActivityGroupTodoAdd"
            android:screenOrientation="portrait"/>

        <activity android:name="com.example.workcare.view.group.todo.ActivityGroupTodoDetail"
            android:screenOrientation="portrait"/>

        <activity android:name="com.example.workcare.view.group.notice.ActivityGroupNotice"
            android:screenOrientation="portrait"/>

        <activity android:name="com.example.workcare.view.group.notice.ActivityGroupNoticeAdd"
            android:screenOrientation="portrait"/>

        <activity android:name="com.example.workcare.view.group.notice.ActivityGroupNoticeDetail"
            android:screenOrientation="portrait"/>

        <activity android:name="com.example.workcare.view.group.info.ActivityMemberInfo"
            android:screenOrientation="portrait"/>

        <activity android:name="com.example.workcare.view.mypage.info_modify.ActivityInfoModify"
            android:screenOrientation="portrait"/>

        <activity android:name="com.example.workcare.view.mypage.alarm.ActivityAlarm"
            android:screenOrientation="portrait"/>

        <activity android:name="com.example.workcare.view.mypage.message.ActivityMessage"
            android:screenOrientation="portrait"/>

    </application>

</manifest>